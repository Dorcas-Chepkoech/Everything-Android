<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_red"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_signUp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:fontFamily="@font/comfortaa_light"
                android:textSize="28dp"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:text="Sign~Up"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/iv_usermainprofile_id"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:src="@drawable/theone"/>

            <Button
                android:id="@+id/btn_chooseImage_id"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:textColor="@color/color_red"
                android:textStyle="normal"
                android:fontFamily="@font/comfortaa_light"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:text="Choose Image"
                android:textSize="20dp" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:orientation="vertical"

            android:padding="10dp">

            <EditText
                android:id="@+id/et_firstName_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:textColorHint="@color/color_white"
                android:layout_marginStart="15dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="text"
                android:textColor="@color/color_white"
                android:hint="First Name"/>
            <EditText
                android:id="@+id/et_userLastName_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/comfortaa_light"
                android:textColorHint="@color/color_white"
                android:layout_gravity="start"
                android:textColor="@color/color_white"
                android:gravity="start"
                android:inputType="text"
                android:hint="Last Name"/>
            <EditText
                android:id="@+id/et_userName_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:layout_marginStart="15dp"
                android:textColorHint="@color/color_white"
                android:textColor="@color/color_white"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="text"
                android:hint="Username"/>
            <EditText
                android:id="@+id/et_userLoginEmail_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColorHint="@color/color_white"
                android:fontFamily="@font/comfortaa_light"
                android:textColor="@color/color_white"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="textEmailAddress"
                android:hint="Enter email"/>
            <EditText
                android:id="@+id/et_userPhoneNumber_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_white"
                android:fontFamily="@font/comfortaa_light"
                android:textColor="@color/color_white"
                android:layout_marginStart="15dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="number"
                android:hint="Phone Number"/>
            <EditText
                android:id="@+id/et_userPassword_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColorHint="@color/color_white"
                android:fontFamily="@font/comfortaa_light"
                android:textColor="@color/color_white"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="numberPassword"
                android:hint="Password"/>
            <EditText
                android:id="@+id/et_userPasswordTwo_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_white"
                android:fontFamily="@font/comfortaa_light"
                android:layout_marginStart="15dp"
                android:textColor="@color/color_white"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="textPassword"
                android:hint="Confirm Password"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_submit_id"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:textStyle="normal"
                android:fontFamily="@font/comfortaa_light"
                android:textColor="@color/color_red"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:text="Submit"
                android:padding="2dp"
                android:textSize="20dp"/>



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>